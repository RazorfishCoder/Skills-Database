<!DOCTYPE html>
<html>
<head>
  <title>Skills Database</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "jit/base", "jit/Sunburst" %>
  <%= javascript_include_tag "jit/jit", "jit/Extras/excanvas" %>
  <%= csrf_meta_tag %>

</head>
<body onload="init();">
	<!-- Start Wrapper -->
	<div id="wrap">
	  	<div id="mainContent">
	    	<div id="chart">
	        <div id="container">
	        	<div id="center-container">
	            <div id="infovis"></div>
	        	</div>
	        	<div id="right-container">
		        	<div id="inner-details"></div>
	        	</div>
	        	<div id="log"></div>
	      	</div>
	    	</div>
	      <div class="contentContainer">
	      	<h3>Recent Activity</h3>
	        <ul class="list">
	          <% @events.each do |event| -%>
	            <%= render :partial => "/events/#{event.event_type}", :locals => {:event => event} %>
            <% end -%>
	        </ul>
	        <p><a href="#">See more updates</a></p>
	      </div>
	    </div>
	    <div id="supplementContent">
	    	<div class="contentContainer">
      			<% if current_user %>
	      		<h3>Your Profile</h3>
              <img src="<%= current_user.picture_url %>" width="80" height="80" id="profileImg" alt="<%= current_user.first_name %> <%= current_user.last_name %>" />	       	 	<ul>
		        	<li><%= current_user.first_name %> <%= current_user.last_name %></li>
		        	<li><%= current_user.job_title %></li>
		        	<li>Industry: <%= current_user.industry %></li>
		        	<li>Skills: </li>
		        	<li>Products: </li>
		        	<% if current_user.resume -%>
  		        	<li>Resume: <%= link_to current_user.resume, resume_path(current_user) %></li>
		        	<% end -%>
              <li><%= link_to 'Edit', edit_employee_path(current_user) %></li>
		        </ul>

	        	<p><%=link_to 'Update your linkedin profile', current_user.linkedin_url %></p>
	        	<p><%= link_to 'logout', signout_path %></p>
			<% else %>
				<%= link_to "Login via LinkedIn", '/auth/linked_in' %>
			<% end %>
	      	</div>
	      	<div class="contentContainer">
		      	<h3>Search Skills</h3>
		        <form name="" method="" action="">
		          <input type="submit" />
		        	<input type="text" name="" value="search" />
		        </form>
		        <p><a href="#">Browse our visual skills graph</a></p>
	      	</div>
	      	<div class="contentContainer">
		      	<h3>Looking For</h3>
		        <ul>
		        	<li><a href="#">Sharepoint 2010</a></li>
		        	<li><a href="#">Autonomy CRM</a></li>
		        	<li><a href="#">iPhone Objective-C</a></li>
		        	<li><a href="#">PhoneGap</a></li>
		        </ul>
	      	</div>
	    </div>
	</div>
	<!-- Start Wrapper -->

</body>
</html>

