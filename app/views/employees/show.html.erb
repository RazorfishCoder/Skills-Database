<article>
  <p id="notice"><%= notice %></p>
  <div class="primary">
    <h2>Your Profile</h2>
    <section class="profile clearfix"> <img src="<%= @employee.picture_url %>" width="80" height="80" class="profile-img" alt="<%= @employee.first_name %> <%= @employee.last_name %>" />
      <h3><%= @employee.first_name %> <%= @employee.last_name %> // <%= @employee.job_title %></h3>
      <ul>
        <li><strong>Industry:</strong> <%= @employee.industry_tags_names %></li>
        <li><strong>Skills:</strong> <%= @employee.skill_tags_names %></li>
        <li><strong>Products:</strong> <%= @employee.product_tags_names %></li>
        <li><strong>Email:</strong> <%= @employee.email %></li>
        <% if current_user.resume -%>
        <li><strong>Resume:</strong> <%= link_to @employee.resume, resume_path(@employee) %></li>
        <% end -%>
        <li><a href="#" class="attach">Attach file (ppt, doc)</a></li>
      </ul>
      <h4>Professional Information</h4>
      <p><%= @employee.professional_info.html_safe %></p>
      <h4>Give / Gets</h4>
      <p><%= @employee.give_gets %></p>
      <h4>Interesting Facts</h4>
      <p><%= @employee.interesting_facts %></p>
      <%= link_to 'Edit', edit_employee_path(@employee) %> | <%= link_to 'Back', root_path %> </section>
  </div>
  <div class="secondary">
    <h2>Your Skills</h2>
    <section class="skills-graph-container">
      <div id="skills-graph"></div>
    </section>
    <h2>People alike</h2>
    <div class="clearfix">
      <section class="twoup">
        <img src="<%= @employee.picture_url %>" width="80" height="80" class="profile-img" alt="<%= @employee.first_name %> <%= @employee.last_name %>" />
        <p><strong><%= @employee.first_name %> <%= @employee.last_name %></strong></p>
        <p>Technical Architect</p>
      </section>
      <section class="twoup last">
        <img src="<%= @employee.picture_url %>" width="80" height="80" class="profile-img" alt="<%= @employee.first_name %> <%= @employee.last_name %>" />
        <p><strong><%= @employee.first_name %> <%= @employee.last_name %></strong></p>
        <p>Technical Architect</p>
      </section>
    </div>
  </div>
</article>
